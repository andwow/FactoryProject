<Window x:Class="FactoryApp.Views.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FactoryApp.Views"
        mc:Ignorable="d"
        Title="MainMenu" Height="450" Width="800" Background="LightSkyBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Hello,"/>
            <TextBlock Text="{Binding User.FirstName}" Margin="4 0 0 0"/>
            <TextBlock Text="{Binding User.LastName}" Margin="4 0 0 0"/>
        </StackPanel>
        <DataGrid Grid.Row="2" ItemsSource="{Binding Plants}" IsReadOnly="True" MouseDoubleClick="DataGrid_MouseDoubleClick">
            <!--<DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" />
            </DataGrid.Columns>-->
        </DataGrid>
    </Grid>
</Window>
