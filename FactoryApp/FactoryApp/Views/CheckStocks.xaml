<Window x:Class="FactoryApp.Views.CheckStocks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FactoryApp.Views"
        mc:Ignorable="d"
        Title="CheckStocks" Height="800" Width="1250" Background="LightSkyBlue">
    <Border CornerRadius="45" Background="White" Height="600" Width="850">
        <StackPanel HorizontalAlignment="Center" Margin="0,10,-0.4,10">

            <TextBlock Text="Stocks" HorizontalAlignment="Center" FontSize="32"  Width="92"/>
            <Grid Height="535">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="857.7"/>
                    <ColumnDefinition Width="58.3"/>
                    <ColumnDefinition Width="0*"/>
                </Grid.ColumnDefinitions>

            </Grid>
        </StackPanel>
    </Border>
</Window>
